<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:tns="http://integracion.com/sdp/gen"
           targetNamespace="http://integracion.com/sdp/gen" elementFormDefault="qualified">

    <!-- Find All -->
    <xs:element name="getIncidentsRequest">
        <xs:complexType>
            <xs:sequence>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="getIncidentsResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Incidents" type="tns:Incident" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="getIncidentRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="name" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="getIncidentResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Incident" type="tns:Incident"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <!-- Save -->
    <xs:element name="postIncidentRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Incident" type="tns:Incident"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="postIncidentResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Incident" type="tns:Incident"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="Incident">
        <xs:sequence>
            <xs:element name="idsdp" type="xs:string"/>
            <xs:element name="id_cliente" type="xs:string"/>
            <xs:element name="descripcion" type="xs:string"/>
            <xs:element name="id_categorizacion" type="xs:string"/>
            <xs:element name="adjunto_nombre" type="xs:string" minOccurs="0"/>
            <xs:element name="adjunto_data" type="xs:base64Binary" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>
</xs:schema>